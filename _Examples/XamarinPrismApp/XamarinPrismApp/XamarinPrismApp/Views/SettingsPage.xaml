<?xml version="1.0" encoding="utf-8" ?>
<base:PageBase
    x:Class="XamarinPrismApp.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:JToolbox.XamarinForms.Core.Base;assembly=JToolbox.XamarinForms.Core"
    Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding CurrentValue}" />
        <Entry Text="{Binding SetValue}" />
        <Button Command="{Binding SetCommand}" Text="Set" />
        <Button Command="{Binding ClearCommand}" Text="Clear" />
    </StackLayout>

</base:PageBase>